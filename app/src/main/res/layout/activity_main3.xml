<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sophie.githubapi.Main3Activity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main3_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Title:"
            android:textColor="@color/colourPink"
            android:textSize="25dp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/main3_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Section:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/main3_publicationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Publication:"
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/main3_publicationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Publication:"
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/main3_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Type:"
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/main3_pillarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Type:"
            android:textColor="@color/colorOrange"
            android:textSize="18dp" />

        <Button
            android:id="@+id/main3_web"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Web:"
            android:textColor="@color/colorBlue"
            android:textSize="14dp" />

    </LinearLayout>

</ScrollView>
